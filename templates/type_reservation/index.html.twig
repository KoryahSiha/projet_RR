{% extends 'base.html.twig' %}

{% block title %}TypeReservation index{% endblock %}

{% block body %}
    <h1>TypeReservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_reservation in type_reservations %}
            <tr>
                <td>{{ type_reservation.id }}</td>
                <td>{{ type_reservation.nom }}</td>
                <td>{{ type_reservation.description }}</td>
                <td>
                    <a href="{{ path('app_type_reservation_show', {'id': type_reservation.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_GESTIONNAIRESAL') %}
                    <a href="{{ path('app_type_reservation_edit', {'id': type_reservation.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_GESTIONNAIRESAL') %}
    <a href="{{ path('app_type_reservation_new') }}">Créer un nouveau type de réservation</a>
    {% endif %}
{% endblock %}
