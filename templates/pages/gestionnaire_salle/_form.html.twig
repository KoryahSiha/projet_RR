{# 'novalidate' permet de désactiver côté client la validation HTML du formulaire.
La désactivation est utilise pour tester les formulaires et les erreurs côté serveur. #}
{{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
    <div class="form-group">
		{{ form_label(form.nom) }}
		{{ form_widget(form.nom) }}
		<div class="form-error">
			{{ form_errors(form.nom) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.prenom) }}
		{{ form_widget(form.prenom) }}
		<div class="form-error">
			{{ form_errors(form.prenom) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.user) }}
		{{ form_widget(form.user) }}
		<div class="form-error">
			{{ form_errors(form.user) }}
		</div>
	</div>
    
    <button class="btn btn-primary mt-4 btn-sm">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
