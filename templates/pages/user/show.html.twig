{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Adresse mail</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rôle(s)</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_index') }}" class="btn btn-light btn-sm">retour à la liste</a>

        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-light btn-sm">éditer</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
        {{ include('pages/user/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
