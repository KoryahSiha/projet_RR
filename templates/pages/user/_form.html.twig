{# 'novalidate' permet de désactiver côté client la validation HTML du formulaire.
La désactivation est utilise pour tester les formulaires et les erreurs côté serveur. #}
{{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
    <div class="form-group">
		{{ form_label(form.email) }}
		{{ form_widget(form.email) }}
		<div class="form-error">
			{{ form_errors(form.email) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.roles) }}
		<div class="form-widget">
		{{ form_widget(form.roles) }}
		</div>
		<div class="form-error">
			{{ form_errors(form.roles) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_widget(form.password) }}
		<div class="form-error">
			{{ form_errors(form.password) }}
		</div>
	</div>
    
    <div class="form-group">
		{{ form_label(form.enabled) }}
		{{ form_widget(form.enabled) }}
		<div class="form-error">
			{{ form_errors(form.enabled) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.gestionnaireSalle) }}
		{{ form_widget(form.gestionnaireSalle) }}
		<div class="form-error">
			{{ form_errors(form.gestionnaireSalle) }}
		</div>
	</div>
    <button class="btn btn-primary mt-4 btn-sm mb-4">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
