{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Réservation</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ reservation.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ reservation.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ reservation.description }}</td>
                </tr>
                <tr>
                    <th>Date début</th>
                    <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Durée</th>
                    <td>{{ reservation.duree }}</td>
                </tr>
                <tr>
                    <th>Date fin</th>
                    <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Nombre participants</th>
                    <td>{{ reservation.nombreParticipant }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_reservation_index') }}" class="btn btn-light btn-sm">retour à la liste</a>

        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_GESTIONNAIRESAL') %}
        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-light btn-sm">éditer</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_GESTIONNAIRESAL') %}
        {{ include('pages/reservation/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
