{% extends 'base.html.twig' %}

{% block title %}Domaine{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Domaine</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ domaine.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ domaine.nom }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_domaine_index') }}" class="btn btn-light btn-sm">retour à la liste</a>

        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_domaine_edit', {'id': domaine.id}) }}" class="btn btn-light btn-sm">éditer</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
        {{ include('pages/domaine/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
